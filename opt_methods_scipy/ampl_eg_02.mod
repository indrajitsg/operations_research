# -------------------------------------------------------------------
# Linear Programming
# Minimize 2 * x1 + x2
# subject to: 
#     -x1 + x2 <= 1
#      x1 + x2 >= 2
#      x2 >= 0
#      x1 - 2x2 <= 4
# -------------------------------------------------------------------

var x1 >= 0.0;
var x2 >= 0.0;


minimize obj:
	2 * x1 + x2;

s.t. c1:
	-x1 + x2 <= 1;

s.t. c2:
	x1 + x2 >= 2;

s.t. c3:
	x2 >= 0;

s.t. c4:
	x1 - 2 * x2 <= 4;


